package com.myweb.www.service;

import javax.inject.Inject;

import org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder;
import org.springframework.stereotype.Service;

import com.myweb.www.domain.CustomerVO;
import com.myweb.www.repository.UserDAO;

import lombok.extern.slf4j.Slf4j;

@Service
@Slf4j
public class CustomerServiceImpl implements UserService{
	
	@Inject
	private UserDAO udao;
	
	@Inject
	BCryptPasswordEncoder passwordencoder;
	
	@Override
	public int join(CustomerVO cvo) {
		log.info("회원가입 서비스 진입");
		CustomerVO tempUser = udao.getUser(uvo.getCid());
		if(tempUser != null) {
			return 0;
		}
		if(uvo.getCid() == null || uvo.getCid().length() == 0) {
			return 0;
		}
		if(uvo.getCpw() == null || uvo.getCpw().length() == 0) {
			return 0;
		}
		String cpw = uvo.getCpw();
		String encodePw = passwordencoder.encode(cpw);
		uvo.setCpw(encodePw);
		int isOk = udao.join(uvo);
		log.info("isOk : "+isOk);
		return isOk;
	}
	
	
}
